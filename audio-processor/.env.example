# Audio Processor Environment Configuration Template
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Audio Processor
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key-for-authentication

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://audioprocessor:your_secure_password@localhost/audio_processor

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# STORAGE SETTINGS
# =============================================================================
DOWNLOAD_DIR=/path/to/downloads
TEMP_DIR=/path/to/temp
MAX_STORAGE_GB=100
MAX_FILE_SIZE_MB=500

# =============================================================================
# AUDIO PROCESSING SETTINGS
# =============================================================================
AUDIO_FORMAT=mp3
AUDIO_BITRATE=320
AUDIO_SAMPLE_RATE=48000
NORMALIZE_AUDIO=true
NOISE_REDUCTION=false

# =============================================================================
# DOWNLOAD SETTINGS
# =============================================================================
MAX_CONCURRENT_DOWNLOADS=3
RATE_LIMIT_PER_MINUTE=10
DOWNLOAD_TIMEOUT=3600
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# =============================================================================
# YOUTUBE SETTINGS
# =============================================================================
YOUTUBE_API_KEY=
YOUTUBE_QUALITY=bestaudio

# =============================================================================
# SOUNDCLOUD SETTINGS
# =============================================================================
SOUNDCLOUD_CLIENT_ID=
SOUNDCLOUD_AUTH_TOKEN=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# WHITELIST CONFIGURATION (Optional)
# =============================================================================
# Enable whitelist to restrict downloads to approved channels/users only
WHITELIST_ENABLED=false

# YouTube channel IDs (comma-separated)
# Example: WHITELISTED_CHANNELS=UC_channel_id_1,UC_channel_id_2
WHITELISTED_CHANNELS=

# SoundCloud usernames (comma-separated)
# Example: WHITELISTED_SOUNDCLOUD=user1,user2
WHITELISTED_SOUNDCLOUD=

# =============================================================================
# WEBHOOK NOTIFICATIONS (Optional)
# =============================================================================
WEBHOOK_ENABLED=false
WEBHOOK_URL=

# =============================================================================
# FILE NAMING
# =============================================================================
FILENAME_TEMPLATE={artist} - {title}
FOLDER_BY_SOURCE=true
FOLDER_BY_DATE=true

# =============================================================================
# DOCKER-SPECIFIC (for docker-compose deployment)
# =============================================================================
DB_PASSWORD=your_database_password
