# Audio Processor - Supabase Integration Configuration
# Copy this file to .env and update with your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Direct PostgreSQL connection
# Format: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
AUDIO_PROCESSOR_API_KEY=your-audio-processor-api-key

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for Celery task queue
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# STORAGE SETTINGS
# =============================================================================
DOWNLOAD_DIR=/home/audioprocessor/audio-processor/downloads
TEMP_DIR=/home/audioprocessor/audio-processor/temp
MAX_STORAGE_GB=100
MAX_FILE_SIZE_MB=500

# =============================================================================
# AUDIO PROCESSING SETTINGS
# =============================================================================
AUDIO_FORMAT=mp3
AUDIO_BITRATE=320
AUDIO_SAMPLE_RATE=48000
NORMALIZE_AUDIO=true
NOISE_REDUCTION=false

# =============================================================================
# DOWNLOAD SETTINGS
# =============================================================================
MAX_CONCURRENT_DOWNLOADS=3
RATE_LIMIT_PER_MINUTE=10
DOWNLOAD_TIMEOUT=3600
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# =============================================================================
# WHITELIST CONFIGURATION
# =============================================================================
# Set to true to only allow downloads from whitelisted sources
WHITELIST_ENABLED=false

# =============================================================================
# CALLBACK CONFIGURATION
# =============================================================================
# URL of your Qoqnuz Next.js application
NEXT_PUBLIC_APP_URL=https://app.qoqnuz.com

# Callback URL for status updates (auto-set based on NEXT_PUBLIC_APP_URL)
CALLBACK_URL=https://app.qoqnuz.com/api/admin/downloads/callback
